rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Jules API Keys - users can only read/write their own key
    match /julesKeys/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User preferences (favorites, settings, etc.) - users can only access their own
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Jules Queues - users can only access their own queue items
    match /julesQueues/{userId}/items/{itemId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      allow list: if request.auth != null && request.auth.uid == userId;
    }
    
    // Optional: Prompt History - users can only access their own history
    match /promptHistory/{historyId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      allow list: if request.auth != null;
    }
    
    // Optional: Prompt Queue - users can only access their own queued prompts
    match /promptQueue/{queueId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      allow list: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
